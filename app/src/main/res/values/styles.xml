<resources>
    <style name="TabTextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/font_black_normal</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/font_black_normal</item>
    </style>

    <style name="ContentTextAppearance">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/font_black_normal</item>
    </style>

    <style name="DialogTopAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">
            @anim/slide_top_in
        </item>
        <item name="android:windowExitAnimation">
            @anim/slide_top_out
        </item>
    </style>

    <style name="DialogBottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">
            @anim/slide_bottom_in
        </item>
        <item name="android:windowExitAnimation">
            @anim/slide_bottom_out
        </item>
    </style>

    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="BottomAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_top_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_top_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_bottom_out</item>
    </style>


    <style name="ShapeAppearance.Sunflower.Card" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
    </style>

    <style name="ShapeAppearance.Sunflower.Button.Add" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/button_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/button_corner_radius</item>
    </style>

    <style
        name="ShapeAppearance.Sunflower.FAB"
        parent="ShapeAppearance.MaterialComponents.SmallComponent" />

    <!-- Add plant button -->
    <dimen name="button_corner_radius">12dp</dimen>


</resources>
