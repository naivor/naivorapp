<com.mdd.customlayout.SquareLayout2 xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:descendantFocusability="blocksDescendants"
                                    android:padding="4px"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:roundedCornerRadius="1px"
        app:roundingBorderColor="#eedcd5d5"
        app:placeholderImage="@mipmap/ic_default_no_image"
        app:roundingBorderWidth="1px"
        app:actualImageScaleType="centerCrop"
        />

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="bottom"
        android:button="@drawable/selector_select_image"/>
    android:padding="2dp"

</com.mdd.customlayout.SquareLayout2>
